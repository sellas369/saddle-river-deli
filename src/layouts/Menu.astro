---
import '../sass/typetura.css';
import '../sass/style.scss';

import Header from '../components/Header.svelte';
import InfoBlock from '../components/InfoBlock.svelte';

import { getEntry } from 'astro:content';

const config = await getEntry('config', 'config');
const about = await getEntry('pages', 'about');
const menu = await getEntry('pages', 'menu');
const catering = await getEntry('pages', 'catering');

const { title, slug } = Astro.props;

const t = `${title ? title + ' | ' : ''}${config?.data.title}`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0c7f00" />
    <meta name="generator" content={Astro.generator} />
    <title>{t}</title>
  </head>
  <body>
    <div class="container">
      <Header
        config={config.data}
        menu={menu?.data.title}
        catering={catering?.data.title}
        path={Astro.url.pathname}
      />
      <main>
        <article>
          <div class="top">
            <header>
              <h1 id={slug || null}>{title || config.data.title}</h1>
              <footer class="info">
                <InfoBlock config={config.data} shadow={false} />
              </footer>
            </header>
            <slot name="preamble" />
          </div>
          <div class="menu">
            <div class="inner-menu">
              <slot name="menu" />
            </div>
          </div>
          <div class="main-content">
            <slot />
          </div>
        </article>
      </main>
      <footer class="global">
        <div class="inside">
          <p>{config.data.disclaimer}</p>

          <ul role="list" class="footer-links">
            <li>
              <a href="/">{config.data.title}</a>
            </li>
            <li>
              <a href="/menu">{menu.data.title}</a>
            </li>
            <li>
              <a href="/catering">{catering.data.title}</a>
            </li>
            <li>
              <a href="/about-us">{about.data.title}</a>
            </li>
          </ul>

          <InfoBlock config={config.data} />

          <p>Â© {config.data.title} {new Date().getFullYear()}</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style lang="scss">
  body {
    background-color: #0c7f00;
  }
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
  }

  .main-content :global(:target) {
    scroll-margin-block-start: 4.5rem;

    @media (min-width: 800px) {
      scroll-margin-block-start: 1rem;
    }
  }

  h1 {
    margin: 0;
    line-height: 1;
  }

  article {
    padding: 1rem;
    max-width: 80ch;
    margin-inline: auto;
    background-color: white;
    display: grid;

    @media (min-width: 800px) {
      display: grid;
      grid-template-columns: 250px 1fr;
      column-gap: 1rem;
      max-width: calc(250px + 1rem + 80ch);
    }
  }

  @media (min-width: 800px) {
    .top {
      grid-column: 1 / -1;
      max-width: 80ch;
      padding-inline: 1rem;
      margin-inline: auto;
    }
    .content {
      grid-column: 2;
      > :global(.container) {
        margin-block-start: 0;
      }
    }
  }

  .menu {
    position: sticky;
    top: 0rem;

    @media (min-width: 800px) {
      position: unset;
    }
  }

  .inner-menu {
    @media (min-width: 800px) {
      position: sticky;
      top: 1rem;
    }
  }

  header {
    display: grid;
    gap: 1rem;
  }

  .info {
    font-size: 1.15rem;
  }

  .global {
    background: #0c7f00;
    padding: 1rem;
    border-top: 2px solid black;
    // margin-block-start: 1rem;
    font-weight: 300;
  }

  .inside {
    max-width: 80ch;
    margin-inline: auto;
    color: white;
    display: grid;
    gap: 2rem;

    p {
      margin: 0;
      padding: 0;
    }
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    column-gap: 1rem;
    row-gap: 0.5rem;
    a {
      color: currentColor;
    }
  }
</style>
